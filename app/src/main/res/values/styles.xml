<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="bottom_nav_menu" parent="Theme.MaterialComponents">
        <item name="backgroundTint">@color/grey</item>
    </style>

    <style name="button_add">
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/purple_700</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button_cancel">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="toolbar_title">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="bottom_sheet">
        <item name="cornerSize">15dp</item>
        <item name="cornerFamily">rounded</item>
    </style>
</resources>