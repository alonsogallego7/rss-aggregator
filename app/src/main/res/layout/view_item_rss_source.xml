<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="60px">

    <ImageView
        android:id="@+id/no_image_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/no_image"/>

    <TextView
        android:id="@+id/web_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/web_name"
        android:textSize="@dimen/list_item_title"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/spacing_medium"
        app:layout_constraintTop_toTopOf="@id/no_image_icon"
        app:layout_constraintLeft_toRightOf="@id/no_image_icon"/>

    <TextView
        android:id="@+id/url"
        android:text="@string/url"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_medium"
        android:layout_marginTop="@dimen/spacing_small"
        app:layout_constraintTop_toBottomOf="@id/web_name"
        app:layout_constraintLeft_toRightOf="@id/no_image_icon"/>

</androidx.constraintlayout.widget.ConstraintLayout>