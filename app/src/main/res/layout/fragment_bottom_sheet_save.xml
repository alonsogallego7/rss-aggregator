<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_save"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:behavior_hideable="true"
    app:layout_behavior="com.google.android.material.bottomSheet.BottomSheetBehavior">

    <EditText
        android:id="@+id/name_text_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_horizontal"
        android:layout_marginTop="@dimen/spacing_vertical"
        android:layout_marginEnd="@dimen/spacing_horizontal"
        android:background="@drawable/edit_text_border"
        android:inputType="text"
        android:padding="@dimen/padding_edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_vertical"
        android:background="@color/white"
        android:text="@string/input_rss_name"
        app:layout_constraintBottom_toTopOf="@id/name_text_input"
        app:layout_constraintStart_toStartOf="@id/name_text_input"
        app:layout_constraintTop_toTopOf="@id/name_text_input" />

    <EditText
        android:id="@+id/url_text_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_horizontal"
        android:layout_marginTop="@dimen/spacing_vertical"
        android:layout_marginEnd="@dimen/spacing_horizontal"
        android:background="@drawable/edit_text_border"
        android:inputType="text"
        android:padding="@dimen/padding_edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_text_input" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_vertical"
        android:background="@color/white"
        android:text="@string/input_rss_url"
        app:layout_constraintBottom_toTopOf="@id/url_text_input"
        app:layout_constraintStart_toStartOf="@id/name_text_input"
        app:layout_constraintTop_toTopOf="@id/url_text_input" />

    <android.widget.Button
        android:id="@+id/button_add"
        style="@style/button_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_vertical"
        android:layout_marginRight="@dimen/spacing_horizontal"
        android:background="@drawable/button_save_border"
        android:text="@string/button_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/url_text_input" />

    <android.widget.Button
        android:id="@+id/button_cancel"
        style="@style/button_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_vertical"
        android:layout_marginRight="@dimen/spacing_small"
        android:layout_marginBottom="@dimen/spacing_vertical"
        android:text="@string/button_cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_add"
        app:layout_constraintTop_toBottomOf="@id/url_text_input" />

</androidx.constraintlayout.widget.ConstraintLayout>